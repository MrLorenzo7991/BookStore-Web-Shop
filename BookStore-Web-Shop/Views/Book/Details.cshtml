@model Book

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Informazioni</h2>
            <p>
                <img src="@Model.UrlImage" alt="@Model.Title" width="500"/>
               
            </p>
            <h5>
                @Model.Title
            </h5>
            <p>
               <i> @Model.Description</i>
            </p>
            <p>
               Categoria:  @Model.Category.Name
            </p>
            <p>
              Prezzo:  @Model.Price <i class="fa-solid fa-euro-sign"></i>
            </p>  
            
            <p>
               Like: @Model.NumberOfLikes  <i class="fa-solid fa-heart"></i>
            </p>
            <p>
               Copie a disposizione: @Model.Quantity      <i class="fa-solid fa-copy"></i>
            </p>
        </div>
    </div>
</div>