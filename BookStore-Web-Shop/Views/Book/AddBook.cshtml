@model BookCategories

<div class = "container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Benvenuto nella pagina di aggiunta di un nuovo libro!</h1>
            <p>Da qui potrai aggiungere un nuovo libro</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Create" asp-controller="Book" method="post" class="row">
                @Html.AntiForgeryToken()
                <div class="col-12 my-2">
                    <span>Titolo libro:</span>
                    <input type="text" class="form-control" asp-for="Book.Title"/>
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
                <div class="col-12 my-2">
                    <span>Url immagine:</span>
                    <input type="url" class="form-control" asp-for="Book.UrlImage"/>
                    <span asp-validation-for="Book.UrlImage" class="text-danger"></span>
                </div>
                <div class="col-12 my-2">
                    <span>Descrizione:</span>
                    <input type="text" class="form-control" asp-for="Book.Description" rows="4"/>
                    <span asp-validation-for="Book.Description" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <span>Prezzo:</span>
                    <input type="number" class="form-control" asp-for="Book.Price" min=0 step=0.01/>
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <span>Categoria:</span>
                    <select asp-for="Book.CategoryId" class="form-select" aria-label="Default select example">
                      <option selected>Seleziona una categoria</option>
                        @foreach(Category category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="text-end my-2">
                    <input type="submit" class="btn btn-small btn-success" value="Aggiungi">
                </div>
            </form>
        </div>
    </div>
</div>