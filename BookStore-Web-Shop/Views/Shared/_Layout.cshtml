<!doctype html>
<html lang="in">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css    ">
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,500|Poppins:400,700&display=swap" rel="stylesheet" />
      <title>@ViewData["Title"] - BookStore</title>
    @RenderSection("CssFile", required:false)
</head>
   
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="color: black;">
          <a class="navbar-brand ps-3" href="/Home"><img src="~/imgs/Logo.png" alt="logo"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto px-5 " id="navbar">
             
              <li class="nav-item">
                <a class="nav-link" href="/Home"  style="color: black;">Home</a>
              </li>
       
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                  Category
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  
                    <li><a class="dropdown-item" href="/book/index">Action</a></li>
                  <li><a class="dropdown-item" href="/book/create">Another action</a></li>
                 
                </ul>
              </li>

              <li class="nav-item ">

                <div class="container-fluid">
                    <form class="d-flex">
                      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                      <button class="btn btn-outline-dark" type="submit" ><i class="fa-solid fa-magnifying-glass" ></i></button>
                    </form>
                  </div>
              </li>

              <li class="nav-item">
                    <a class="nav-link" style="color: black;"  ><i class="ms-2 fa-solid fa-cart-shopping" id="cart-icon"></i>   
                    </a>
              </li>
              
              <li class="nav-item float-start ps-1">
                    <a class="nav-link" style="color: black;">   <i class="fa-solid fa-user"></i>
                    </a>
              </li>
            
            </ul>
          </div>
        </nav>
      </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto bg-light text-center">
    <p>Copyright &copy; The Official BookStore 2022</p>
    </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
