@section scripts{
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="~/js/ListBook.js"></script>
<script type="text/javascript">

   search();
   document.getElementById('search').addEventListener('keyup', search);
   function search(){
       let searchString = document.getElementById("search").value
       BookCard(searchString);
   }

   
   function BookCard(searchString){
    document.querySelector('.content').innerHTML = '';
    axios.get('/api/bookapi/get', {params:{searchString : searchString}}).then((result) => 
    {  
        if(result.data.lenght == 0)
        {
            console.log("Non ci sono libri")
        }
        else
        {
            result.data.forEach(book => 
                {
                    document.querySelector('.content').innerHTML += 
                    `   
                    <div class="col-md-4 mb-3>
                        <div class="swiper-slide card text-center h-100 mx-auto" style=" width: 18rem">
                                <img onclick="dettagli(${book.id})" class="card-img-top" src="${book.urlImage}" alt="" width="200">
                                <button class="btn" type="button" id="like" onclick="send(${book.id})" >
                                    <i class="fa-solid fa-heart"></i>
                                </button>                           
                            <div class="card-body">
                                <h5>${book.title}</h5>
                                <p> ${book.author}</p>
                            </div>
                        </div>
                    </div>
                    `
                });
        }
    }).catch((error) => {
        console.log("C'è stato un errore: ");
    });
} 


    function dettagli(id){
        window.open("Home/Details/" + id,"_self")
    }
    function send(Id){
        axios.post('/Api/Favourites/AddFavouriteBook', 
        {
            bookId : Id
        }).then(function (response){
            console.log(response);
        }).catch(function (error){
            console.log(error);
        });
    }
</script>
}